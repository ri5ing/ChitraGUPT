rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Secures user profile data, ensuring only the owner can read or write.
     * @path /users/{userId}
     * @allow (read, write) if request.auth.uid == userId
     * @deny (read, write) if request.auth.uid != userId
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if false; // Do not allow listing all user profiles.
      allow create: if isOwner(userId);
      allow update: if isOwner(userId);
      allow delete: if isOwner(userId);
    }

    /**
     * @description Allows any authenticated user to read auditor profiles, but only the auditor can modify their own profile.
     * @path /auditors/{auditorId}
     * @allow (read) if request.auth != null
     * @allow (write) if request.auth.uid == auditorId
     * @deny (write) if request.auth.uid != auditorId
     * @principle Allows public read access for auditor profiles, enforces ownership for writes.
     */
    match /auditors/{auditorId} {
      function isAuditor(auditorId) {
        return request.auth.uid == auditorId;
      }

      allow get: if request.auth != null;
      allow list: if request.auth != null;
      allow create: if isAuditor(auditorId);
      allow update: if isAuditor(auditorId) && resource != null;
      allow delete: if isAuditor(auditorId) && resource != null;
    }

    /**
     * @description Secures contracts, ensuring only the owner (user) can read or write.
     * @path /users/{userId}/contracts/{contractId}
     * @allow (read, write) if request.auth.uid == userId
     * @deny (read, write) if request.auth.uid != userId
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/contracts/{contractId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && resource != null;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * @description Secures AI analysis reports for contracts, ensuring only the owner (user) can read or write.
     * @path /users/{userId}/contracts/{contractId}/analysisReports/{analysisReportId}
     * @allow (read, write) if request.auth.uid == userId
     * @deny (read, write) if request.auth.uid != userId
     * @principle Enforces document ownership for all operations.
     */
    match /users/{userId}/contracts/{contractId}/analysisReports/{analysisReportId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) && resource != null;
      allow delete: if isOwner(userId) && resource != null;
    }

    /**
     * @description Secures auditor feedback for contracts, allowing only authorized auditors to provide feedback.
     * @path /users/{userId}/contracts/{contractId}/auditorFeedback/{auditorFeedbackId}
     * @allow (read) if request.auth.uid == userId || (resource.data.auditorId == request.auth.uid)
     * @allow (create) if true
     * @allow (update, delete) if resource.data.auditorId == request.auth.uid && resource != null
     * @deny (create) if !((get(/databases/$(database)/documents/auditors/$(request.auth.uid))).data.id == request.auth.uid)
     * @principle Enforces that only the contract owner or assigned auditor can read, and only the assigned auditor can write.
     */
    match /users/{userId}/contracts/{contractId}/auditorFeedback/{auditorFeedbackId} {
        function isOwner(userId) {
            return request.auth.uid == userId;
        }

        function isAuditor() {
            return exists(/databases/$(database)/documents/auditors/$(request.auth.uid));
        }

        allow get: if isOwner(userId) || (resource.data.auditorId == request.auth.uid);
        allow list: if isOwner(userId); // Owner can list feedback
        allow create: if isAuditor() && request.resource.data.auditorId == request.auth.uid;
        allow update: if resource.data.auditorId == request.auth.uid && resource != null;
        allow delete: if resource.data.auditorId == request.auth.uid && resource != null;
    }

    /**
     * @description Secures annotations made by auditors on contracts.
     * @path /users/{userId}/contracts/{contractId}/annotations/{annotationId}
     * @allow (read) if request.auth.uid == userId || (resource.data.auditorId == request.auth.uid)
     * @allow (create) if true
     * @allow (update, delete) if resource.data.auditorId == request.auth.uid && resource != null
     * @deny (create) if !((get(/databases/$(database)/documents/auditors/$(request.auth.uid))).data.id == request.auth.uid)
     * @principle Enforces that only the contract owner or assigned auditor can read, and only the assigned auditor can write.
     */
    match /users/{userId}/contracts/{contractId}/annotations/{annotationId} {
        function isOwner(userId) {
            return request.auth.uid == userId;
        }

        function isAuditor() {
            return exists(/databases/$(database)/documents/auditors/$(request.auth.uid));
        }

        allow get: if isOwner(userId) || (resource.data.auditorId == request.auth.uid);
        allow list: if isOwner(userId);
        allow create: if isAuditor() && request.resource.data.auditorId == request.auth.uid;
        allow update: if resource.data.auditorId == request.auth.uid && resource != null;
        allow delete: if resource.data.auditorId == request.auth.uid && resource != null;
    }

       /**
        * @description Secures chat messages between a client and an auditor for a specific contract review.
        * @path /users/{userId}/contracts/{contractId}/chats/{messageId}
        */
       match /users/{userId}/contracts/{contractId}/chats/{messageId} {
            function isOwner(userId) {
                return request.auth.uid == userId;
            }

            allow get: if isOwner(userId) || (resource.data.senderId == request.auth.uid);
            allow list: if isOwner(userId);
            allow create: if request.auth.uid == request.resource.data.senderId;
            allow update: if request.auth.uid == resource.data.senderId && resource != null;
            allow delete: if request.auth.uid == resource.data.senderId && resource != null;
       }
  }
}